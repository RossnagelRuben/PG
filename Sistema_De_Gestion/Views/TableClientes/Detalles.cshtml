@model TableCliente
@{
    List<TableCorreo> ListCorreos = null;
    if (ViewData.ContainsKey("Correos"))
    {
        ListCorreos = (List<TableCorreo>)ViewData["Correos"];
    }
}
<div>
    <h4>Detalles Cliente: @Model.Nombres @Model.Apellidos</h4>
    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-10">
            Cuil:
        </dt>
        <dd class="col-sm-10">
            @{
                string CUIL = Model.Cuil1.ToString() + " - " + Model.Dni.ToString() + " - " + Model.Cuil2.ToString();
                @CUIL;
            }
        </dd>
        <dt class="col-sm-10">
            Direccion:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="col-sm-10">
            Observaciones:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Obs)
        </dd>
        <dt class="col-sm-10">
            Contraseña Afip:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PassAfip)
        </dd>
        <dt class="col-sm-10">
            Contraseña Anses:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PassAnses)
        </dd>
        <dt class="col-sm-10">
            Dado de Alta el:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaAlta)
        </dd>
        <dt class="col-sm-10">
            Ultima Modificacion:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaUltModificacion)
        </dd>
        <dt class="col-sm-10">
            Link Drive:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
        <dt class="col-sm-10">
            Habilitado:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Habilitado)
        </dd>

        <dt class="col-sm-10">
            Correos:
        </dt>
        <dd class="col-sm-10">
            @{
                if (ListCorreos != null && ListCorreos.Count > 0)
                {
                    for (int i = 0; i < ListCorreos.Count(); i++)
                    {
                        var corr = ListCorreos[i];
                        <p value="@corr.IdCorreo">@corr.Correo</p>
                    }
                }
            }
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdCliente" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Listado de Clientes</a>
</div>