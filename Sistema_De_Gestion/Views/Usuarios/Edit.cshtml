@model Sistema_De_Gestion.Data.Usuario2
@{
    ViewData["Title"] = "Editar Usuario";
}
<h4>Editar Usuario @Html.DisplayFor(model => model.Usuario)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="IdUsuario" />
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label">Password:</label>
                <input asp-for="Pas" class="form-control" type="password" />
                <span asp-validation-for="Pas" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label class="control-label">Confirmar Password:</label>
                <input name="ConfirmPass" class="form-control" type="password" />
            </div>
            <br />
            <div class="form-group">
                <label class="control-label">Seleccionar Rol:</label>
                <select asp-for="IdRol" class="form-control" asp-items="ViewBag.IdRol"></select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <br />
    <a asp-action="Index">Volver a la Lista</a>
</div>
<br />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}