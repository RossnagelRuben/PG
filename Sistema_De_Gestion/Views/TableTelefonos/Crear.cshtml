@model TableTelefono
<h4>Dando de Alta nuevo Telefono al cliente @ViewData["Nombre"]</h4>
<br />
<div>
    <div>
        <form asp-action="Crear">
            @*aca muestra el error*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@ViewData["idCliente"]" />
            <input type="hidden" name="nombre" value="@ViewData["Nombre"]" />
            <div class="form-group">
                <label class="control-label">Telefono: (sin 0 ni 15 ej: xxxx-xxxxxx)</label>
                <input name="Telefono" placeholder="XXXX-XXXXXX" class="form-control" />
                <span asp-validation-for="CodigoDeArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">observación:</label>
                <input asp-for="Obs" class="form-control" />
                <span asp-validation-for="Obs" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input checked="checked" class="form-check-input" asp-for="Habilitado" /> @Html.DisplayNameFor(model => model.Habilitado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Asociar Telefono" class="btn btn-primary" /> |
                <a class="btn btn-secondary" asp-action="Index" asp-route-id="@ViewData["idCliente"]" asp-route-nombre="@ViewData["Nombre"]">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
